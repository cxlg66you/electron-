  "devDependencies": {
    "electron": "^15.3.0",
    "electron-builder": "^22.14.5"
  },
  "build": {
    "appId": "com. github.CyberChef",
     "directories": { // 输出文件夹
      "output": "build"
    }, 
     "nsis": {
      "oneClick": false, // 是否一键安装
      "allowElevation": true, // 允许请求提升。 如果为false，则用户必须使用提升的权限重新启动安装程序。
      "allowToChangeInstallationDirectory": true, // 允许修改安装目录     
   },
     "win": {
     "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
